<h1>New Game</h1>
<h2>Who would you like to play?</h2>
<%= form_for @game do |f| %>
  <%#= f.label 'Another User' %>
  <%#= f.radio_button :player2_id, '' %>
  <%= f.label 'Computer' %>
  <%= f.radio_button :player2_id, User.find(3).id %>
  <%= f.label 'Guest' %>
  <%= f.radio_button :player2_id, User.find(4).id %>
  <%= f.hidden_field :player1_id, value: current_user.id %>
  <%= f.hidden_field :completed, value: false %>
  <%= f.submit %>
<% end %> 